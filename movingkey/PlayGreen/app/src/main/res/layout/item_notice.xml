<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="@drawable/ripple_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/dp_16"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_update"
                        android:textColor="@color/c_4b9b50"
                        android:textSize="@dimen/dp_10"/>

                    <View
                        android:layout_width="@dimen/dp_0.5"
                        android:layout_height="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:background="@color/c_d2d2d2"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_reg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_10"/>

                </LinearLayout>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_arrow"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:background="@drawable/btn_arrow"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_f5f5f5"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_16"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_14"
            android:visibility="gone">

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_6"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/dp_13"/>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_update"
                android:layout_width="@dimen/dp_180"
                android:layout_height="@dimen/dp_36"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_box"
                android:gravity="center"
                android:text="@string/str_update"
                android:textColor="@color/c_c9c9c9_4b9b50"
                android:textSize="@dimen/dp_13"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_gravity="bottom"
            android:background="@color/c_d2d2d2"/>
    </LinearLayout>

</FrameLayout>