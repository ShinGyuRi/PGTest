<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/c_ffffff">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layout_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_15">

        </android.support.v7.widget.RecyclerView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_62"
            android:background="@drawable/img_logo2"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_find_friend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:minHeight="@dimen/dp_40"
            android:text="@string/str_empty_friend_message"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_13"/>

        <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
            android:id="@+id/txt_connect"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/btn_color_common"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/str_find_friend"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_15"/>
    </LinearLayout>


</FrameLayout>