<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_mission_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingBottom="@dimen/dp_20">

        <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="@string/str_challenge"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_27"/>

        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/str_super_greener"
            android:textColor="@color/c_4b9b50"
            android:textSize="@dimen/dp_27"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <Button
                android:id="@+id/btn_test"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료팝업"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_252"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                    android:id="@+id/txt_super_greener_desc01"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_119"
                    android:background="@drawable/img_box_top"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/dp_57"
                    android:text="@string/str_super_greener_description"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_16"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_133"
                    android:background="@drawable/img_box_btm"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_super_greener_desc02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@string/str_super_greener_description2"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_13"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_super_greener_desc03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center"
                        android:text="@string/str_super_greener_description3"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_13"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_9"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <kr.innisfree.playgreen.common.view.NanumGothicTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_period"
                            android:textColor="@color/c_4b9b50"
                            android:textSize="@dimen/dp_11"/>

                        <kr.innisfree.playgreen.common.view.NanumGothicTextView
                            android:id="@+id/txt_super_greener_period"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/str_challenge_period"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp_11"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/icon_badge_sg"/>
        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_mission_ing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layout_pg21_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c_ffffff"
            android:gravity="center_horizontal"
            android:minHeight="@dimen/dp_180"
            android:orientation="vertical">

            <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                android:id="@+id/txt_pg21_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:gravity="center"
                android:minHeight="@dimen/dp_24"
                android:text="@string/str_pg21_sub_title"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_13"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <kr.innisfree.playgreen.common.view.GothamTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/dp_36"
                    android:text="@string/str_title_playgreen"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_31"/>

                <kr.innisfree.playgreen.common.view.GothamTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/dp_36"
                    android:text="@string/str_21"
                    android:textColor="@color/c_4b9b50"
                    android:textSize="@dimen/dp_31"/>

            </LinearLayout>


            <View
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@color/c_bebebe"/>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_pg21_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/dp_42"
                android:text="@string/str_pg21_progress"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_14"/>

            <LinearLayout
                android:id="@+id/layout_pg21_mission_complete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_155"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/img_boxline"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_pg21_mission_complete_message"
                    android:textColor="@color/c_4b9b50"
                    android:textSize="@dimen/dp_14"/>

                <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_6"
                    android:gravity="center"
                    android:text="@string/str_pg21_mission_complete_message_02"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/dp_14"/>

                <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                    android:id="@+id/txt_earthbox_request"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_38"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/btn_666666"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_38"
                    android:paddingRight="@dimen/dp_38"
                    android:text="@string/str_pg21_earth_box_request"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp_15"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_pg21_reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:minHeight="@dimen/dp_160"/>

    </LinearLayout>

</LinearLayout>