<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_my_pg_point"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@drawable/img_round1"
        android:gravity="center"
        android:orientation="vertical">

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_20"
            android:text="@string/str_my_pg_point"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/dp_13"/>

        <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
            android:id="@+id/txt_my_pg_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_20"
            android:textColor="@color/c_4b9b50"
            android:textSize="@dimen/dp_24"/>

    </LinearLayout>

    <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center_vertical"
        android:text="@string/str_pg_point_save_use_history"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/dp_13"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/c_d2d2d2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"></android.support.v7.widget.RecyclerView>
</LinearLayout>