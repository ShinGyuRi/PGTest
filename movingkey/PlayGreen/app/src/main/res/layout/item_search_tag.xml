<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/ripple_dark"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_item_tag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_14"/>


            <ImageButton
                android:id="@+id/btn_item_remove_history"
                android:visibility="visible"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:background="@drawable/btn_delete3"/>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_item_remove_all_history"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:layout_alignParentTop="true"
                android:background="@color/c_e1e1e1"/>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:singleLine="true"
                android:text="@string/str_remove_all_report"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/dp_12"/>

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>