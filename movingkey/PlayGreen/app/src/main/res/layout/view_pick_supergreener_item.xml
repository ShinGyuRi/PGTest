<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_27"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_72">

            <ImageView
                android:id="@+id/img_supergreener_profile"
                android:layout_width="@dimen/dp_66"
                android:layout_height="@dimen/dp_66"
                android:layout_gravity="bottom"
                android:background="@drawable/img_user_null2"/>

            <ImageView
                android:id="@+id/img_supergreener_badge"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_gravity="right"/>

        </FrameLayout>

        <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
            android:id="@+id/txt_supergreener_name"
            android:layout_width="@dimen/dp_66"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:maxLines="2"
            android:minHeight="@dimen/dp_20"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_13"/>

    </LinearLayout>

</LinearLayout>