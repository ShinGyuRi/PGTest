<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_intro_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_intro1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_intro_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_92"
            android:layout_marginTop="@dimen/dp_66"/>

        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
            android:id="@+id/txt_intro_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_6"
            android:minHeight="@dimen/dp_50"
            android:text="@string/str_intro_subtitle_01"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_16"/>

        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="@dimen/dp_120"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@color/c_ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_start"
        android:layout_width="@dimen/dp_240"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/dp_81"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
            android:id="@+id/txt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/str_intro_button_text"
            android:textColor="@color/c_4b9b50"
            android:textSize="@dimen/dp_14"/>

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:background="@drawable/icon_next2"
            android:layout_marginLeft="@dimen/dp_10"
            android:duplicateParentState="true"/>
    </LinearLayout>

</FrameLayout>