<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--android:background="@drawable/bg_login"-->

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_86"
            android:layout_marginTop="@dimen/dp_80"
            android:background="@drawable/img_logo1" />

        <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
            android:id="@+id/txt_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:minHeight="@dimen/dp_43"
            android:text="@string/str_login_text"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_14" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/layout_facebook"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/btn_color_login_facebook"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--android:layout_width="@dimen/dp_260"-->

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_facebook1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_ffffff_40" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_facebook"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_instagram"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_color_login_instagram"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_instagram1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_ffffff_40" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_instagram"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_kakaotalk"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_color_login_kakaotalk"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_kakaotalk1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_3b1e1e_40" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_kakaotalk"
                android:textColor="@color/c_3b1e1e"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <!-- 중국어, 영어버전 -->

        <LinearLayout
            android:id="@+id/layout_wechat"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_color_login_wechat"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_wechat1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_ffffff_80" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_wechat"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_line"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_color_login_line"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_line1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_ffffff_80" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_line"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@drawable/btn_color_login_email"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_45"
                android:layout_height="match_parent"
                android:duplicateParentState="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/icon_email1" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_18"
                android:background="@color/c_3b1e1e_40" />

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:duplicateParentState="true"
                android:gravity="left|center_vertical"
                android:text="@string/str_login_to_email"
                android:textColor="@color/c_3b1e1e"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>

</FrameLayout>