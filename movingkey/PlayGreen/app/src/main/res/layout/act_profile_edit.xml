<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/title_back_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <FrameLayout
                    android:id="@+id/layout_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_30">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="center"
                        android:background="@drawable/img_user_null2"/>

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_gravity="bottom|right"
                        android:background="@drawable/btn_addphoto"/>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_d2d2d2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_nickname"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageButton
                        android:id="@+id/btn_nickname_del"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/btn_delete"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_introduce"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_introduce"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:maxHeight="@dimen/dp_80"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageButton
                        android:id="@+id/btn_introduce_del"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/btn_delete"/>
                </LinearLayout>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:id="@+id/txt_introduce_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:drawableLeft="@drawable/icon_warning"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_15"
                    android:text="@string/str_introduce_warning"
                    android:textColor="@color/c_e9552c"
                    android:textSize="@dimen/dp_12"
                    android:visibility="gone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_email"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageButton
                        android:id="@+id/btn_email_del"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/btn_delete"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_phone"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:inputType="phone"
                        android:paddingBottom="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_15"
                        android:singleLine="true"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageButton
                        android:id="@+id/btn_phone_del"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_44"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/btn_delete"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_gender"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <RadioButton
                        android:id="@+id/radio_female"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:drawablePadding="@dimen/dp_14"
                        android:drawableRight="@drawable/checkbox_3"
                        android:text="@string/str_female"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <RadioButton
                        android:id="@+id/radio_male"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_40"
                        android:button="@null"
                        android:drawablePadding="@dimen/dp_14"
                        android:drawableRight="@drawable/checkbox_3"
                        android:text="@string/str_male"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_birthday"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_birthday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_dark"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/icon_next"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_e1e1e1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/c_ffffff"
                    android:minHeight="@dimen/dp_44"
                    android:orientation="horizontal">

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="@dimen/dp_86"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingTop="@dimen/dp_15"
                        android:text="@string/str_country"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_14"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_country"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ripple_dark"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/dp_14"/>

                    <ImageView
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/icon_next"/>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:background="@color/c_d2d2d2"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</FrameLayout>