<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_76"
        android:background="@color/c_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_57"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_item_profile"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_54"
                android:layout_gravity="left|bottom"/>

            <ImageView
                android:id="@+id/img_icon_badge"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="right"
                android:visibility="visible"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                android:id="@+id/txt_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_18"/>

            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:id="@+id/txt_item_regist_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:maxLines="1"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/dp_12"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_item_follow"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/btn_follow_small"/>

    </LinearLayout>

</LinearLayout>