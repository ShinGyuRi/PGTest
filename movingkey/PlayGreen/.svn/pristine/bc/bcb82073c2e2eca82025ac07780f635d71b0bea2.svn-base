<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/c_69b06c"
        android:minHeight="@dimen/titlebar_height"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="enterAlways"
        app:titleTextColor="@color/c_ffffff">
        <!--scroll|-->

        <FrameLayout
            android:id="@+id/layout_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_close1"
                android:duplicateParentState="true"/>

        </FrameLayout>

        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_pg21_earth_box_request"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_20"/>
    </android.support.v7.widget.Toolbar>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_subscription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:minHeight="@dimen/dp_60"
                android:text="@string/str_earth_box_description"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_18"/>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="@dimen/dp_30"
                android:text="@string/str_earth_box_description_02"
                android:textColor="@color/c_999999"
                android:textSize="@dimen/dp_10"/>

            <kr.innisfree.playgreen.common.view.NanumGothicEditView
                android:id="@+id/edit_contact"
                style="@style/edit_common"
                android:layout_marginTop="@dimen/dp_22"
                android:hint="@string/str_hint_input_contact"
                android:inputType="numberSigned"/>

            <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                android:id="@+id/txt_subscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/btn_666666"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_38"
                android:paddingRight="@dimen/dp_38"
                android:text="@string/str_subscription"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_15"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_subscription_complete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/c_ffffff"
                android:gravity="center_horizontal"
                android:minHeight="@dimen/dp_300"
                android:orientation="vertical">

                <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="@string/str_playgreen_ko"
                    android:textColor="@color/c_4b9b50"
                    android:textSize="@dimen/dp_22"/>

                <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/str_21days_mission_complete"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_22"/>

                <FrameLayout
                    android:layout_width="@dimen/dp_190"
                    android:layout_height="@dimen/dp_100"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="right"/>

                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_gravity="left"
                        android:background="@drawable/img_badge_logo"/>
                </FrameLayout>

                <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:gravity="center"
                    android:minHeight="@dimen/dp_27"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_18"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:id="@+id/txt_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/dp_13"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/c_ffffff"
                android:gravity="center_horizontal"
                android:minHeight="@dimen/dp_135"
                android:orientation="vertical">

                <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center"
                    android:text="@string/str_pg21_share_message"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_13"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_18"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_facebook"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/icon_facebook2"/>

                    <ImageButton
                        android:id="@+id/btn_instagram"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/icon_instagram2"/>

                    <ImageButton
                        android:id="@+id/btn_kakaostory"
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:layout_marginLeft="@dimen/dp_24"
                        android:background="@drawable/ripple_dark"
                        android:src="@drawable/icon_kakaostory1"/>

                </LinearLayout>


            </LinearLayout>

            <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                android:id="@+id/txt_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/btn_666666"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_38"
                android:paddingRight="@dimen/dp_38"
                android:text="@string/str_confirm"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_15"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_supergreener_reward"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_e1e1e1"
            android:visibility="gone"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@color/c_ffffff"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:minHeight="@dimen/dp_30"
                        android:orientation="horizontal">

                        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_challenge"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp_22"/>

                        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="@string/str_super_greener"
                            android:textColor="@color/c_4b9b50"
                            android:textSize="@dimen/dp_22"/>
                    </LinearLayout>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:minHeight="@dimen/dp_22"
                        android:text="@string/str_mission_period_end"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/dp_15"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_173"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_16"
                        android:background="@drawable/img_box_top"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_88"
                            android:layout_height="@dimen/dp_88"
                            android:layout_marginTop="@dimen/dp_30"
                            android:background="@drawable/icon_badge_sg"/>

                        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                            android:id="@+id/txt_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:text="@string/str_super_greener_grade"
                            android:textColor="@color/c_4b9b50"
                            android:textSize="@dimen/dp_17"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_96"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@drawable/img_box_btm"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <kr.innisfree.playgreen.common.view.NanumGothicTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.2"
                            android:text="@string/str_super_greener_selection_description"
                            android:textColor="@color/c_333333"
                            android:textSize="@dimen/dp_13"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_5"
                        android:background="@color/c_e1e1e1"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicTextView
                        android:id="@+id/txt_sg_reward_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/str_super_greener_reward_description"
                        android:textColor="@color/c_999999"
                        android:textSize="@dimen/dp_13"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_sg_name"
                        style="@style/edit_common"
                        android:layout_marginTop="@dimen/dp_16"
                        android:hint="@string/str_input_name"
                        android:inputType="text"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicEditView
                        android:id="@+id/edit_sg_contact"
                        style="@style/edit_common"
                        android:layout_marginTop="@dimen/dp_8"
                        android:hint="@string/str_hint_input_contact"
                        android:inputType="numberSigned"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@color/c_e1e1e1"/>

                    <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                        android:id="@+id/txt_sg_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_38"
                        android:background="@drawable/btn_666666"
                        android:gravity="center"
                        android:text="@string/str_confirm"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/dp_15"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_20"
                        android:background="@color/c_e1e1e1"/>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>