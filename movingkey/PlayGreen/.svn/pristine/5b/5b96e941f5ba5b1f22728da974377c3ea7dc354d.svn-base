<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_dark"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp_58"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_15">

                <ImageView
                    android:id="@+id/img_item_profile"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="bottom"
                    android:background="@drawable/img_user_null"/>

                <ImageView
                    android:id="@id/img_icon_badge"
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_gravity="right"/>

            </FrameLayout>


            <kr.innisfree.playgreen.common.view.InnisfreeGothicTextView
                android:id="@+id/txt_item_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lineSpacingExtra="@dimen/dp_6"
                android:paddingBottom="@dimen/dp_5"
                android:paddingTop="@dimen/dp_5"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_13"/>


            <Button
                android:id="@+id/btn_item_follow"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/btn_follow_small"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/layout_thumb"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_marginRight="@dimen/dp_15">

                <ImageView
                    android:id="@+id/img_item_thumb"
                    android:layout_width="@dimen/dp_42"
                    android:layout_height="@dimen/dp_42" />

                <ImageView
                    android:id="@+id/img_item_play"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_c_play"
                    android:visibility="gone"/>

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@color/c_d2d2d2"/>
</FrameLayout>