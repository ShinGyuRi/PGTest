<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="@dimen/dp_1">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/titlebar_height"
                android:background="@color/c_69b06c"
                android:minHeight="@dimen/titlebar_height"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="enterAlways"
                app:titleTextColor="@color/c_ffffff">
                <!--scroll|-->

                <FrameLayout
                    android:id="@+id/layout_back"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_close1"
                        android:duplicateParentState="true" />

                </FrameLayout>

                <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/str_report"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp_20" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_ffffff"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/str_report_first"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <RadioButton
                    android:id="@+id/radio_first"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_e1e1e1" />

            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_44">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/str_report_second"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <RadioButton
                    android:id="@+id/radio_second"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_e1e1e1" />

            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_44">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="@string/str_report_third"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14" />

                <RadioButton
                    android:id="@+id/radio_third"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/radio"
                    android:button="@null"
                    android:checked="false"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <kr.innisfree.playgreen.common.view.NanumGothicEditView
                android:id="@+id/edit_report"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_142"
                android:background="@drawable/bg_editbox"
                android:gravity="left|top"
                android:padding="@dimen/dp_14"
                android:textColor="@color/c_666666" />

            <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                android:id="@+id/txt_report"
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/btn_color_common"
                android:gravity="center"
                android:text="@string/str_report"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_15" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
