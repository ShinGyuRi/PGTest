<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eeeeee"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <include
                layout="@layout/title_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <FrameLayout
                        android:id="@+id/layout_profile"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_marginTop="@dimen/dp_30">

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_user_null2"
                            android:duplicateParentState="true" />

                        <ImageView
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_36"
                            android:layout_gravity="bottom|right"
                            android:background="@drawable/btn_addphoto"
                            android:duplicateParentState="true" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/bg_box"
                        android:minHeight="@dimen/dp_80"
                        android:orientation="vertical">

                        <kr.innisfree.playgreen.common.view.NanumGothicEditView
                            android:id="@+id/edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/str_nickname"
                            android:minHeight="@dimen/dp_40"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/c_666666"
                            android:textColorHint="@color/c_c9c9c9"
                            android:textSize="@dimen/dp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0.5"
                            android:background="@color/c_e1e1e1" />

                        <kr.innisfree.playgreen.common.view.NanumGothicEditView
                            android:id="@+id/edit_introduce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/str_input_introduce"
                            android:lineSpacingExtra="@dimen/dp_5"
                            android:minHeight="@dimen/dp_40"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:paddingTop="@dimen/dp_10"
                            android:textColor="@color/c_666666"
                            android:textColorHint="@color/c_c9c9c9"
                            android:textSize="@dimen/dp_14" />

                        <kr.innisfree.playgreen.common.view.NanumGothicTextView
                            android:id="@+id/txt_introduce_warning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@color/c_ffffff"
                            android:drawableLeft="@drawable/icon_warning"
                            android:drawablePadding="@dimen/dp_6"
                            android:gravity="center_vertical"
                            android:text="@string/str_introduce_warning"
                            android:textColor="@color/c_e9552c"
                            android:textSize="@dimen/dp_12"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/bg_box"
                        android:minHeight="@dimen/dp_80"
                        android:orientation="vertical">

                        <kr.innisfree.playgreen.common.view.NanumGothicEditView
                            android:id="@+id/edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/str_email"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/c_666666"
                            android:textColorHint="@color/c_c9c9c9"
                            android:textSize="@dimen/dp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0.5"
                            android:background="@color/c_e1e1e1" />

                        <kr.innisfree.playgreen.common.view.NanumGothicEditView
                            android:id="@+id/edit_phone"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/str_phone"
                            android:inputType="phone"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/c_666666"
                            android:textColorHint="@color/c_c9c9c9"
                            android:textSize="@dimen/dp_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_8"
                        android:background="@drawable/bg_box"
                        android:orientation="vertical">

                        <kr.innisfree.playgreen.common.view.NanumGothicTextView
                            android:id="@+id/txt_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_dark"
                            android:gravity="center_vertical"
                            android:hint="@string/str_birthday"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:singleLine="true"
                            android:textColor="@color/c_666666"
                            android:textColorHint="@color/c_c9c9c9"
                            android:textSize="@dimen/dp_14" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0.5"
                            android:background="@color/c_e1e1e1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/ripple_dark">

                            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                                android:id="@+id/txt_country"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:gravity="center_vertical"
                                android:hint="@string/str_country"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10"
                                android:singleLine="true"
                                android:textColor="@color/c_666666"
                                android:textColorHint="@color/c_c9c9c9"
                                android:textSize="@dimen/dp_14" />

                            <ImageView
                                android:layout_width="@dimen/dp_12"
                                android:layout_height="@dimen/dp_12"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@drawable/icon_next" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/layout_use_policy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_20"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/check_use_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@null"
                                android:checked="false"
                                android:drawableLeft="@drawable/checkbox_3"
                                android:drawablePadding="@dimen/dp_10"
                                android:text="@string/str_agree_use_policy"
                                android:textColor="@color/c_666666"
                                android:textSize="@dimen/dp_14" />

                            <!--<kr.innisfree.playgreen.common.view.NanumGothicTextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="match_parent"-->
                                <!--android:gravity="left|center_vertical"-->
                                <!--android:paddingLeft="@dimen/dp_3"-->
                                <!--android:text="@string/str_allow_option_guide"-->
                                <!--android:textColor="@color/c_e9552c"-->
                                <!--android:textSize="@dimen/dp_12" />-->
                        </LinearLayout>


                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/icon_next" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layout_privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10">

                        <CheckBox
                            android:id="@+id/check_privacy_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:button="@null"
                            android:checked="false"
                            android:drawableLeft="@drawable/checkbox_3"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="@string/str_agree_privacy_policy"
                            android:textColor="@color/c_666666"
                            android:textSize="@dimen/dp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_12"
                            android:layout_height="@dimen/dp_12"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@drawable/icon_next" />

                    </RelativeLayout>


                    <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                        android:id="@+id/txt_confirm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_30"
                        android:background="@drawable/btn_color_common"
                        android:gravity="center"
                        android:text="@string/str_confirm"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/dp_16" />

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </FrameLayout>
</LinearLayout>