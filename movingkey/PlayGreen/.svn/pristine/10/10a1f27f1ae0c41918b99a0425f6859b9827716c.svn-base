<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout_today_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400">

        <ImageView
            android:id="@+id/img_today_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_40"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_23"
            android:paddingRight="@dimen/dp_23">

            <FrameLayout
                android:layout_width="@dimen/dp_89"
                android:layout_height="@dimen/dp_89">

                <ImageView
                    android:id="@+id/img_today_profile"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_84"
                    android:layout_gravity="bottom"
                    android:background="@drawable/img_user_null"/>

                <ImageView
                    android:id="@+id/img_today_badge"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_gravity="right"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
                    android:id="@+id/txt_today_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_34"
                    android:text="이름"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp_25"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:id="@+id/txt_today_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_34"
                    android:text="이름sdfsdfadf"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp_13"/>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

</LinearLayout>