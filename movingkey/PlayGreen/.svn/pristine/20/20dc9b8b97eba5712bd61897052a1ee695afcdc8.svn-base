<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@color/c_69b06c">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/str_camera_cinemagraph_info_title_1"
                android:textColor="@color/c_ffffff"
                android:textSize="@dimen/dp_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_0.33"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@color/c_ffffff" />

                <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/str_camera_cinemagraph_info_title_2"
                    android:textColor="@color/c_ffffff"
                    android:textSize="@dimen/dp_22" />

                <View
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_0.33"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@color/c_ffffff" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/cinemagraph_info.btn_close"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/btn_close1" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/view_cinemagraph_info_01" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.33"
                android:background="@color/c_e1e1e1" />


            <include layout="@layout/view_cinemagraph_info_02" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.33"
                android:background="@color/c_e1e1e1" />


            <include layout="@layout/view_cinemagraph_info_03" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.33"
                android:background="@color/c_e1e1e1" />

            <include layout="@layout/view_cinemagraph_info_04" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>