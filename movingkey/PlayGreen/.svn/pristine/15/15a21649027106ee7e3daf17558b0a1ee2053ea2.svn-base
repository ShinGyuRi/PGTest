<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/c_69b06c"
        android:minHeight="@dimen/titlebar_height"
        app:contentInsetStart="0dp"
        app:layout_scrollFlags="enterAlways"
        app:titleTextColor="@color/c_ffffff">
        <!--scroll|-->

        <FrameLayout
            android:id="@+id/layout_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_back1"
                android:duplicateParentState="true"/>

        </FrameLayout>

        <kr.innisfree.playgreen.common.view.InnisfreeGothicBoldTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/str_setting"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_20"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!--group 01 -->
            <RelativeLayout
                android:id="@+id/layout_change_pw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_d2d2d2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_change_pw"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_block_user_list"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_block_user"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_d2d2d2"/>
            </RelativeLayout>


            <!--group 02 -->
            <RelativeLayout
                android:id="@+id/layout_manage_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_d2d2d2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_manage_account"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_find_friend"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_find_friend"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_d2d2d2"/>
            </RelativeLayout>


            <!--group 03 -->
            <RelativeLayout
                android:id="@+id/layout_alarm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_d2d2d2"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_alarm"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageButton
                    android:id="@+id/btn_alarm"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_onoff"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_save_original_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_e1e1e1"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_save_original_photo"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageButton
                    android:id="@+id/btn_save_original_photo"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_onoff"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_remove_search_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_remove_search_list"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_save_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_save_data"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <TextView
                    android:id="@+id/btn_save_data"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_onoff" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_d2d2d2"/>
            </RelativeLayout>

            <!--group 04 -->
            <RelativeLayout
                android:id="@+id/layout_notice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_d2d2d2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_notice"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_program_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_program_info"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_e1e1e1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_help"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_help"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

                <ImageView
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/icon_next"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_d2d2d2"/>
            </RelativeLayout>


            <!-- logout -->
            <RelativeLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/c_ffffff">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentTop="true"
                    android:background="@color/c_d2d2d2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_alignParentBottom="true"
                    android:background="@color/c_d2d2d2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_dark"/>

                <kr.innisfree.playgreen.common.view.NanumGothicTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="@string/str_setting_logout"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dp_14"/>

            </RelativeLayout>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_last_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/dp_12"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>