<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff">

    <LinearLayout
        android:id="@+id/layout_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_47"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_friend_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/str_friend_count"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dp_13"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <kr.innisfree.playgreen.common.view.NanumGothicTextView
                android:id="@+id/txt_follow_all"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_28"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/btn_round1"
                android:gravity="center"
                android:text="@string/str_follow_all"
                android:textColor="@color/c_4b9b50"
                android:textSize="@dimen/dp_13"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/c_d2d2d2"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c_ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_62"
            android:background="@drawable/img_logo2"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_find_friend_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:minHeight="@dimen/dp_40"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/dp_5"
            android:text="@string/str_find_facebook_friend"
            android:textColor="@color/c_999999"
            android:textSize="@dimen/dp_13"/>

        <kr.innisfree.playgreen.common.view.NanumGothicBoldTextView
            android:id="@+id/txt_connect"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/btn_color_common"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_34"
            android:paddingRight="@dimen/dp_34"
            android:text="@string/str_connect_facebook"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/dp_15"/>

    </LinearLayout>


</FrameLayout>