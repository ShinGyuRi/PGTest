<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_mission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_dark"
        android:layout_marginBottom="@dimen/dp_20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_mission"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_mission"
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:gravity="center"
            android:minHeight="@dimen/dp_37"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_13"/>

    </LinearLayout>

</LinearLayout>