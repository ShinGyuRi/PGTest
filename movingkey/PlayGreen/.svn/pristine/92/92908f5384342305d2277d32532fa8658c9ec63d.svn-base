<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_258"
        android:layout_gravity="bottom"
        android:background="@color/c_f5f5f5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/img_user_null"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:minHeight="@dimen/dp_24"
            android:text="@string/str_follow_cancel_confirm_message"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_14"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_box"
            android:gravity="center"
            android:text="@string/str_follow_cancel"
            android:textColor="@color/c_4b9b50"
            android:textSize="@dimen/dp_15"/>

        <kr.innisfree.playgreen.common.view.NanumGothicTextView
            android:id="@+id/txt_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/bg_box"
            android:gravity="center"
            android:text="@string/str_cancel"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/dp_15"/>


    </LinearLayout>

</FrameLayout>
