<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/title_back_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <kr.innisfree.playgreen.common.view.NanumGothicTextView
        android:id="@+id/txt_pw_warning"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_5"
        android:drawableLeft="@drawable/icon_warning"
        android:drawablePadding="@dimen/dp_6"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="@string/str_warning_current_pw_invalid"
        android:textColor="@color/c_e9552c"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/c_ffffff"
        android:layout_height="@dimen/dp_44">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentTop="true"
            android:background="@color/c_d2d2d2"/>

        <kr.innisfree.playgreen.common.view.NanumGothicEditView
            android:id="@+id/edit_current_pw"
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="@dimen/dp_14"
            android:drawableLeft="@drawable/icon_lock"
            android:paddingLeft="@dimen/dp_10"
            android:inputType="textPassword"
            android:paddingRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:textColorHint="@color/c_c9c9c9"
            android:textColor="@color/c_333333"
            android:hint="@string/str_current_pw"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/c_d2d2d2"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@color/c_ffffff"
        android:layout_height="@dimen/dp_44">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentTop="true"
            android:background="@color/c_d2d2d2"/>

        <kr.innisfree.playgreen.common.view.NanumGothicEditView
            android:id="@+id/edit_new_pw"
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="@dimen/dp_14"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/icon_lock"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:textColorHint="@color/c_c9c9c9"
            android:textColor="@color/c_333333"
            android:hint="@string/str_new_pw_min8"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/c_e1e1e1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/c_ffffff"
        android:layout_height="@dimen/dp_44">

        <kr.innisfree.playgreen.common.view.NanumGothicEditView
            android:id="@+id/edit_new_pw_confirm"
            android:layout_width="match_parent"
            android:background="@null"
            android:textSize="@dimen/dp_14"
            android:drawableLeft="@drawable/icon_lock"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:textColorHint="@color/c_c9c9c9"
            android:textColor="@color/c_333333"
            android:hint="@string/str_new_pw_confirm"
            android:layout_height="match_parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/c_d2d2d2"/>

    </RelativeLayout>




</LinearLayout>