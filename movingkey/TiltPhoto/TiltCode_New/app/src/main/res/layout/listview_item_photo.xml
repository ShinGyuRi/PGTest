<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="282.8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24.3dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/img_gps_mark"
            android:layout_width="8.6dp"
            android:layout_height="12.9dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11.3dp"/>
        
        <TextView
            android:id="@+id/tv_gps_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"/>
        
        <ImageView
            android:id="@+id/img_report"
            android:layout_width="14.3dp"
            android:layout_height="2.8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="339.7dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_photo"
        android:layout_width="match_parent"
        android:layout_height="232.3dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_photo"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/img_receiver1"
            android:layout_width="14dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="11.3dp"/>
    </LinearLayout>

</RelativeLayout>