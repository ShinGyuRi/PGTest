<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="300dp"
    android:layout_height="292.7dp"
    android:background="@drawable/blur_box">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="292.7dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141.7dp"
            android:id="@+id/layout_coupon"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
            
            <ImageView
                android:id="@+id/img_brand"
                android:layout_width="67.7dp"
                android:layout_height="65.3dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="121.6dp"
                android:layout_height="65.3dp"
                android:layout_marginLeft="15.3dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_brandname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.3dp"
                    android:textSize="12sp"
                    android:textColor="@color/colorText"/>

                <TextView
                    android:id="@+id/tv_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6.3dp"
                    android:textSize="8sp"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
            
            <ImageView
                android:id="@+id/img_product"
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_marginLeft="13.4dp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/layout_close"
                android:layout_width="16dp"
                android:layout_height="40dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/material_icons_blackclose"/>
            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/layout_barcode"
            android:layout_width="match_parent"
            android:layout_height="75.2dp"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_below="@+id/layout_coupon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            
            <ImageView
                android:id="@+id/img_barcode"
                android:layout_width="209.4dp"
                android:layout_height="45.9dp"
                android:layout_marginTop="6.7dp"
                android:layout_gravity="center"/>
            
            <LinearLayout
                android:id="@+id/tv_barcode"
                android:layout_width="wrap_content"
                android:layout_height="15.7dp"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_gravity="center"
                android:textSize="13.3sp">

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            android:text="This button is permissioned only for staff member."
            android:id="@+id/textView3"
            android:layout_below="@+id/layout_barcode"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            android:text="A coupon that is once used is not allowed to use again,"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="5sp"
            android:text="Please do not press the vutton before you use."
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37.1dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.6dp"
                android:layout_gravity="center"
                android:textSize="10sp"
                android:text="Use Coupon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76dp"
                android:layout_gravity="center"
                android:textSize="8.5sp"
                android:text="Before use"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_use"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_width="35dp"
                android:layout_height="19dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.7dp"
                android:layout_gravity="center"
                android:textSize="8.5sp"
                android:text="Already used"/>
        </LinearLayout>
    </RelativeLayout>




</RelativeLayout>