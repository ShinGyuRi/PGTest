<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="96.3dp"
        android:layout_height="99.3dp"
        android:layout_marginTop="38.5dp"
        android:layout_gravity="center"
        android:src="@drawable/sm_logo"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21.3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="13.5dp"
            android:layout_height="13.5dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="207dp"
            android:layout_height="11.7dp"
            android:layout_marginLeft="3.5dp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_marginTop="7.8dp"
        android:layout_gravity="center"
        android:background="@drawable/text_field_01"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="17.7dp"
            android:layout_height="16.8dp"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="15.7dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="15.7dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edit_common"
            android:hint="User name"
            android:textColorHint="@color/colorHint"
            android:textSize="13.3dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_password"
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_marginTop="15.3dp"
        android:layout_gravity="center"
        android:background="@drawable/text_field_01"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="17.7dp"
            android:layout_height="16.8dp"
            android:layout_marginLeft="14.3dp"
            android:layout_marginRight="15.7dp"
            android:layout_gravity="center"
            android:src="@drawable/password_icon"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="15.7dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edit_common"
            android:hint="Password"
            android:textColorHint="@color/colorHint"
            android:inputType="textPassword"
            android:textSize="13.3dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="18.7dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <CheckBox
            android:id="@+id/check_keep_signed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="false"
            android:drawableLeft="@drawable/checkbox_custom"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/keep_me_signed_in"
            android:textSize="10sp"
            android:layout_gravity="center"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_in_button"/>


    <Button
        android:id="@+id/btn_login_guest"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="15.3dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_in_as_guest_button"/>
    
    <ImageView
        android:id="@+id/img_forget_account"
        android:layout_width="95dp"
        android:layout_height="11.3dp"
        android:layout_marginTop="27.3dp"
        android:layout_gravity="center"
        android:src="@drawable/forgot_account"/>

    <LinearLayout
        android:id="@+id/layout_facebook"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="25.3dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/sign_in_facebook_button">

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26.7dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:text="Don't have an account? "/>

        <TextView
            android:id="@+id/tv_create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:text="CREATE NEW ACCOUNT"
            android:textSize="10sp"/>

    </LinearLayout>


</LinearLayout>