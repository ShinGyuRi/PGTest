<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    android:background="@color/colorBackground">


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="26dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_tilt1"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/rectangle_76"/>

    <ImageView
        android:id="@+id/img_tilt2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="21.5dp"
        android:src="@drawable/rectangle_76"/>

    <ImageView
        android:id="@+id/img_tilt3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="21.5dp"
        android:src="@drawable/rectangle_76"/>
    </LinearLayout>


    <FrameLayout
    android:id="@+id/layout_tilt"
    android:orientation="vertical"
    android:layout_width="292dp"
    android:layout_height="297.7dp"
    android:layout_marginTop="21.7dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_mark"
        android:layout_width="208.3dp"
        android:layout_height="229.7dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/tilt_margin_top"/>


    </FrameLayout>

    <TextView
    android:id="@+id/tv_tiltalert"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="39dp"
    android:textSize="16sp"
    android:textColor="@color/colorText"/>

</LinearLayout>