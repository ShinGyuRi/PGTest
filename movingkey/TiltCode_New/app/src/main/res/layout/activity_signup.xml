<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/colorBackground"
            android:gravity="center_vertical"
            android:minHeight="@dimen/titlebar_height"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/material_icons_blackchevron_left"
            app:titleTextColor="@color/colorTitleBar">


        </android.support.v7.widget.Toolbar>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="13.3sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="96.3dp"
        android:layout_height="99.3dp"
        android:layout_marginTop="6.3dp"
        android:layout_gravity="center"
        android:src="@drawable/sm_logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="21dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="13.5dp"
            android:layout_height="13.5dp" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="215dp"
            android:layout_height="11.7dp"
            android:layout_marginLeft="3.5dp"
            android:layout_gravity="center"
            android:textSize="10sp"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

       <LinearLayout
           android:layout_width="264dp"
           android:layout_height="102dp"
           android:layout_marginTop="8.7dp"
           android:layout_gravity="center"
           android:weightSum="2"
           android:orientation="horizontal">
           
           <LinearLayout
               android:layout_width="132dp"
               android:layout_height="102dp"
               android:layout_weight="1"
               android:background="@drawable/profile_field"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/img_profile"
                   android:layout_width="@dimen/img_profile_dp"
                   android:layout_height="@dimen/img_profile_dp"
                   android:layout_marginTop="10.2dp"
                   android:layout_gravity="center"
                   android:src="@drawable/user_profile"/>

           </LinearLayout>


           <LinearLayout
               android:layout_width="132dp"
               android:layout_height="102dp"
               android:weightSum="3"
               android:layout_weight="1"
               android:orientation="vertical">

               <EditText
                   android:id="@+id/et_signup_username"
                   android:layout_width="match_parent"
                   android:layout_height="34dp"
                   android:background="@drawable/bg_edit_common"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:hint="Username"
                   android:textSize="12sp"
                   android:paddingLeft="11.3dp"
                   android:textColorHint="@color/colorHint"/>

               <EditText
                   android:id="@+id/et_firstname"
                   android:layout_width="match_parent"
                   android:layout_height="34dp"
                   android:background="@drawable/bg_edit_common"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:hint="First Name"
                   android:textSize="12sp"
                   android:paddingLeft="11.3dp"
                   android:textColorHint="@color/colorHint"/>

               <EditText
                   android:id="@+id/et_lastname"
                   android:layout_width="match_parent"
                   android:layout_height="34dp"
                   android:background="@drawable/bg_edit_common"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:hint="Last Name"
                   android:textSize="12sp"
                   android:paddingLeft="11.3dp"
                   android:textColorHint="@color/colorHint"/>
           </LinearLayout>
       </LinearLayout>
    
    <LinearLayout
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_dob"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_edit_common"
            android:hint="DOB"
            android:textSize="12sp"
            android:paddingLeft="11.3dp"
            android:textColorHint="@color/colorHint"/>

        <EditText
            android:id="@+id/et_sex"
            android:layout_width="132dp"
            android:layout_height="34dp"
            android:background="@drawable/bg_edit_common"
            android:hint="Sex"
            android:textSize="12sp"
            android:paddingLeft="11.3dp"
            android:textColorHint="@color/colorHint"/>
    </LinearLayout>
    
    <EditText
        android:id="@+id/et_email"
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_edit_common"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        android:paddingLeft="11.3dp"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="264dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_edit_common"
        android:hint="Password"
        android:textSize="12sp"
        android:paddingLeft="11.3dp"
        android:textColorHint="@color/colorHint"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.3dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:text="By tapping 'Sign Up' you agree"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="to the "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:text="term &amp; conditions"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="264dp"
        android:layout_height="36dp"
        android:layout_marginTop="20.3dp"
        android:layout_gravity="center"
        android:background="@drawable/sign_up_button" />


</LinearLayout>